                   $this->getContext()->user_profile->getTwitterUsername() : null);
$instagram      = ($this->getContext()->user_profile && $this->getContext()->user_profile->getInstagramUsername() ?
                   $this->getContext()->user_profile->getInstagramUsername() : null);
$skype          = ($this->getContext()->user_profile && $this->getContext()->user_profile->getSkypeUsername() ?
                   $this->getContext()->user_profile->getSkypeUsername() : null);
$website        = ($this->getContext()->user_profile && $this->getContext()->user_profile->getWebsite() ?
                   $this->getContext()->user_profile->getWebsite() : null);

$profiledata = (
  $github || $facebook || $twitter || $instagram || $skype || $website
);

$contributions = 0;
$contributions += $this->getContext()->sum_documents;
$contributions += $this->getContext()->sum_news_posts;
$contributions += $this->getContext()->sum_packets;
