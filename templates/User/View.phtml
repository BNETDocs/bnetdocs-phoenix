$safe_name = htmlspecialchars($this->getContext()->user->getName(), ENT_HTML5, "UTF-8");

$biography      = ($this->getContext()->user_profile && $this->getContext()->user_profile->getBiography() ?
                   $this->getContext()->user_profile->getBiography() : null);
