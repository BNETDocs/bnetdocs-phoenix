        $user_url   = Common::relativeUrlToAbsolute("/user/" . urlencode($user->getId()) . "/" . Common::sanitizeForUrl($user->getName(), true));
        $avatar_url = "https:" . $getAvatar($avatars, $user)->getUrl(22, "identicon");
?>
