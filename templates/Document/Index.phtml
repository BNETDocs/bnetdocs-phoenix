<?php
namespace BNETDocs\Templates;

use \BNETDocs\Libraries\Common;
use \BNETDocs\Libraries\Document;
use \BNETDocs\Libraries\Gravatar;
use \BNETDocs\Libraries\Pair;
use \BNETDocs\Libraries\User;

$title       = "Document Index";
$description = "The index for documents on BNETDocs";
$this->opengraph->attach(new Pair("url", "/document/index"));

$avatars = [];
$getAvatar = function(&$avatars, &$user) {
  $user_id = $user->getId();
  if (isset($avatars[$user_id])) {
    return $avatars[$user_id];
  }
  $avatars[$user_id] = new Gravatar($user->getEmail());
  return $avatars[$user_id];
};

require("./header.inc.phtml");
