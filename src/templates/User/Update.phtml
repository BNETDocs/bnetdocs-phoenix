    $username_error = 'Internal error: '
      . $this->getContext()->username_error[1];
}

switch ($this->getContext()->email_error[1]) {
  case null: case '': $email_error = ''; break;
  case 'MISMATCH':
    $email_error = 'Emails do not match, check for typos.'; break;
